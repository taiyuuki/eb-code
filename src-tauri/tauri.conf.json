{
  "productName": "Ebook Code",
  "version": "0.1.0",
  "identifier": "com.tauri.ebcode",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/spa"
  },
  "app": {
    "windows": [
      {
        "title": "Ebook Code",
        "width": 1200,
        "height": 800,
        "dragDropEnabled": false,
        "decorations": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' customprotocol:",
        "style-src": "'self' 'unsafe-inline'",
        "font-src": "'self' data:*",
        "frame-src": "http://127.0.0.1:* http://localhost:* blob: file:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$HOME/.EBCode/**/*"
          ]
        }
      }
    }
  },
  "bundle": {
    "publisher": "Taiyuuki",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/70x70.png",
      "icons/144x144.png",
      "icons/150x150.png",
      "icons/180x180.png",
      "icons/192x192.png",
      "icons/310x310.png",
      "icons/512x512.png",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "nsis": {
        "compression": "lzma",
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English"
        ]
      },
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENBRDgyNjM1NTBDNDg4RTEKUldUaGlNUlFOU2JZeWtJcEplRUlQVFcyQzNYQmE1aU8xVWJLTVVkRlNlbU9XcVF2T3hWa000SnkK",
      "endpoint": [
        "https://github.com/taiyuuki/eb-code/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}