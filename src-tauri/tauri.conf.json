{
  "productName": "eb-code",
  "version": "0.1.0",
  "identifier": "com.tauri.ebcode",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/spa"
  },
  "app": {
    "windows": [
      {
        "title": "Ebook Code",
        "width": 1200,
        "height": 800,
        "dragDropEnabled": false,
        "decorations": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' customprotocol:",
        "style-src": "'self' 'unsafe-inline'",
        "font-src": "'self' data:*",
        "frame-src": "http://127.0.0.1:* http://localhost:* blob:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$HOME/.EBCode/**/*"
          ]
        }
      }
    }
  },
  "bundle": {
    "publisher": "Taiyuuki",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/70x70.png",
      "icons/144x144.png",
      "icons/150x150.png",
      "icons/180x180.png",
      "icons/192x192.png",
      "icons/310x310.png",
      "icons/512x512.png",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "compression": "lzma"
      },
      "timestampUrl": null,
      "tsp": false,
      "webviewFixedRuntimePath": null,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}